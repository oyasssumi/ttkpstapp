<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ttkpst">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ttkpst">
        <activity
            android:name=".TotalScreen"
            android:exported="false" />
        <activity
            android:name=".CartScreen"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DeliveryScreen"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HistoryScreen"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainMenuScreen"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SignUpScreen"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginScreen"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>